printf(“輸入次方:”);
	printf(“%lf的%dΩ 次方是%lf\n”,x,npower_for(x,n));

system(“pause”);
return 0;
}
double power_whlie(double b,int a)
{
int i=1
double total=1.0;
	while(i<=a)
		{
		total*=b;
		i++;
		}
return total;
}
