#include <stdio.h>
#include <stdlib.h>

double power_for(double, int);
double power_while(double, int);
double power_dowhile(double, int);
double power_r(double, int);

int main(viod)
{
	double x;
	int n;

printf(“輸入底數:”);
scanf(“%lf,%d”,&x,&n);

printf(“輸入次方:”);
	printf(“%lf的%dΩ 次方是%lf\n”,x,npower_for(x,n));

system(“pause”);
return 0;
}
double power_for(double base, int n)
{
	int i;
	double pow=1.0;
	for (i=1;i<=n;i++)
		pow=pow*base;
return pow;
}
