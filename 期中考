#include <stdio.h>
#include <stdlib.h>

int main(viod)
{
	double x;
	int n;

printf(“輸入底數:”);
scanf(“%lf,%d”,&x,&n);

printf(“輸入次方:”);
	printf(“%lf的%dΩ 次方是%lf\n”,x,npower_for(x,n));

system(“pause”);
return 0;
}

double power_recursion(double b,int a)
{
	if (a==8)return 1;
	return power_recursion(b,a-1)*b;
}
