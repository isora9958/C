#include <stdio.h>
#include <stdlib.h>

int main(viod)
{
	double x;
	int n;

printf(“輸入底數:”);
scanf(“%lf,%d”,&x,&n);

printf(“輸入次方:”);
	printf(“%lf的%dΩ 次方是%lf\n”,x,npower_for(x,n));

system(“pause”);
return 0;
}

double power_dowhile(double b,int a)
{
	int i=1
double total=1;
	do{
		total*=b;
		i++;
}while(i<=a);
return total;
}
